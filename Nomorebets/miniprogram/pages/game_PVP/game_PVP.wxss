page {
  height: 100%;
  width: 100%;
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -2;
}

.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.box .button_back_init{
  width: 5%;
  height: 5%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  left:0;
  top:5vmin;
}
.box .button_back_init image{
  width: 15vmin;
  height: 15vmin;
}

.box .player1{
  width: 35%;
  height: 100%;
}

.box .player1_section{
  width: 100%;
  height: 75%;
  display: flex;
  flex-direction: column;
}

.box  .player1_section text{
  color: brown;
  font-size: 25rpx;
}

.box  .player1_section .drop_section{
  width: 100%;
  height: 25%;
  display: flex;
  align-items: center;

}

.box  .player1_section image{
  width: 10vmin;
  height: 10vmin;
  margin-left: 2vmin;
}

.box  .player1_section .mult{
  width: 100%;
  height: 15%;
  align-items: center;
}


.box  .player1_info{
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box  .player1_info text{
  writing-mode:vertical-rl;
  color: brown;
  font-size: 25rpx;
}

.box  .player1_info image{
  width: 25vmin;
  height: 25vmin;
  margin-left: 5vmin;
}

.box  .player1_info .button_auto image{
  width: 15vmin;
  height: 15vmin;
  margin-left: 0vmin;
}


.box .player2{
  width: 35%;
  height: 100%;
}

.box .player2_section{
  width: 100%;
  height: 75%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.box  .player2_section text{
  color: brown;
  font-size: 25rpx;
}

.box  .player2_section .drop_section{
  width: 100%;
  height: 25%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.box  .player2_section image{
  width: 10vmin;
  height: 10vmin;
  margin-left: 2vmin;
}
.box  .player2_info{
  width: 100%;
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box  .player2_info text{
  writing-mode:vertical-rl;
  color: brown;
  font-size: 25rpx;
}

.box  .player2_info image{
  width: 25vmin;
  height: 25vmin;
  margin-left: 5vmin;
}



.box .info{
  width: 18%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.box .info text{
  color: brown;
  font-size: 25rpx;
  margin-top: 1vmin;
}

.box .info .button_section{
  height: 35%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.box .info .button_section image{
  height: 15vmin;
  width: 15vmin;
}





