page {
  height: 100%;
  width: 100%;
}

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -2;
}

.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.box .score_tab{
  height: 80%;
  width: 35%;
  display:flex;
  flex-direction: column;
  justify-content: center;
}

.box .player_tab{
  display:flex;
  flex-direction: column;
  align-items: center;
}

.box .player_tab text{
  margin-top: 25rpx;
  margin-left: 25rpx;
  font-size: 30rpx;
  color: black;
}

.box .button_next{
  width: 5%;
  height: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right:3vmin;
  bottom:5vmin;
}

.box .button_next image{
  width: 20vmin;
  height: 20vmin;
}